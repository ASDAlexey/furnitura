.filter-block
  .header-filter
    margin: 0 auto
    width: 1000px
    padding: 0 20px
    background-color: #fff
    .title
      text-transform: uppercase
      text-align: center
      padding: 62px 0
      lt(30px)
      color: #010101
  .wrapper-list-products
    padding: 86px 0
    background-color: #000
    .list-products
      display: flex
      flex-wrap wrap
  .content-filter
    padding-bottom: 64px
    font-size: 0
    position: relative
    z-index: 1
    .block-filter
      margin-left: 34px
      dibt()
      &:first-child
        margin-left: 0
      > label:not(.color)
        margin-bottom: 5px
        display: block
      .wrapper-prices
        margin-top: 4px
        > div
          dibt()
        .send
          text-align: center
          width: 38px
          height: 38px
          background-color: #818181
          tn(.5s)
          span
            color: #fefefe
            lr(16px)
          &:hover
            background-color: #fedb4f
    .block-colors
      width: 125px
    .checkbox-color
      margin: 4px 0 0 4px
      dibt()
      position: relative
      z-index: 0
      &.white
        .checkbox
          border: 1px solid #000
          + span
            color: #000
      input
        display: none !important
      > span
        aa(1)
        opacity: 0
        tn(.5s)
        font-size: 14px
        color: #fff
      .checkbox
        dibt()
        width: 22px
        height: 22px
        &.check
          + span
            opacity: 1

