.search
  float: none
  position: absolute
  z-index: 4
  top: 6px
  right: 18px
  font-size: 0
  .form-validate>div:first-child input:not([type=checkbox])
    padding-left: 10px
  span
    aa(1)
  .send
    width: 42px
    height: 42px
  input[type="text"]
    color: #000 !important
  .form-validate > div:first-child
    margin-top: 4px !important
  &:hover, &.active
    .wrapper-search-block
      width: 965px
    .send
      opacity: 0
    .close, .send-button
      opacity: 1
    .close
      right: 0 !important
    .send-button
      right: 25px
  .send-button
    lr(16px)
    color: #000
    position: absolute
    z-index: 0
    top: 13px
    right: -26px
    opacity: 0
    tn(.5s)
  .close
    cursor pointer
    font-size: 20px
    position: absolute
    z-index: 0
    top: 22px !important
    left auto !important
    right: -45px !important
    opacity: 0
    tn(.5s)
  .send
    display: block
    tn(.3s)
    dibt()
    font-size: 20px
    position: absolute
    z-index: 0
    top: 2px
    left: -42px
  .wrapper-search-block
    dibt()
    tn(.5s)
    overflow hidden
    width: 0
    &.active
      width: 923px
    input
      background-color: #fff
      display: block
      width: 100%
      height: 42px
      padding: 1px 12px 0
      lr(16px, 42px)