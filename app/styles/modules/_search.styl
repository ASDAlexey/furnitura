.search
  float: none
  position: absolute
  z-index: 4
  top: 3px
  right: 9px
  font-size: 0
  span
    aa(1)
  .send
    width: 42px
    height: 42px
  &:hover
    .wrapper-search-block
      width: 965px
    .send
      opacity: 0
    .close, .send-button
      opacity: 1
    .close
      right: 0
    .send-button
      right: 25px
  .send-button
    lr(16px)
    color: #000
    position: absolute
    z-index: 0
    top: 11px
    right: -26px
    opacity: 0
    tn(.5s)
  .close
    font-size: 20px
    position: absolute
    z-index: 0
    top: 10px
    right: -45px
    opacity: 0
    tn(.5s)
  .send
    display: block
    tn(.3s)
    dibt()
    font-size: 20px
    position: absolute
    z-index: 0
    top: 0
    left: -42px
  .wrapper-search-block
    dibt()
    tn(.5s)
    overflow hidden
    width: 0
    &.active
      width: 923px
    input
      background-color: #fff
      display: block
      width: 100%
      height: 42px
      padding: 1px 12px 0
      lr(16px, 42px)